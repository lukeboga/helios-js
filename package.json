{
  "name": "helios-js",
  "version": "0.0.1-alpha",
  "description": "Light and limited natural language parser for recurring dates",
  "author": "",
  "license": "MIT",
  "main": "out/nl-rrule.cjs.js",
  "module": "out/nl-rrule.es.js",
  "types": "out/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "test": "vitest",
    "simple-test": "npm run build && node -r esbuild-register test/simple-test.ts",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --ext .ts src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "fix-style": "npm run lint:fix && npm run format",
    "sort-imports": "node scripts/sort-imports.js",
    "check": "npm run lint && npm run format:check && tsc --noEmit",
    "prepare": "npm run build && husky install",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "rrule",
    "recurrence",
    "natural-language"
  ],
  "dependencies": {
    "rrule": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.13",
    "@types/rrule": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  }
}
